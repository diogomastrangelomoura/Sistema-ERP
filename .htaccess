<IfModule mod_rewrite.c>
    
	#Bloquear listagem
	Options -Indexes

	Options +FollowSymLinks
	RewriteEngine on

	DefaultLanguage pt-BR
	AddDefaultCharset UTF-8

	RewriteCond %{SCRIPT_FILENAME} !-d
	RewriteCond %{SCRIPT_FILENAME} !-f

	#Errors
	ErrorDocument 404 http://localhost/sis/Sistema-ERP/

	#INICIO**************************************************************
	RewriteRule ^home?$ home.php [L,QSA]
	RewriteRule ^login?$ index.php [L,QSA]


	#VIEWS**************************************************************

	RewriteRule ^clientes?$ views/lista/lista_clientes.php [L,QSA]
	RewriteRule ^cad_clientes?$ views/cadastros/cad_clientes.php [L,QSA]


	RewriteRule ^fornecedores?$ views/lista/lista_fornecedores.php [L,QSA]
	RewriteRule ^cad_fornecedores?$ views/cadastros/cad_fornecedores.php [L,QSA]

	RewriteRule ^produtos?$ views/lista/lista_produtos.php [L,QSA]
	RewriteRule ^cad_produtos?$ views/cadastros/cad_produtos.php [L,QSA]

	RewriteRule ^categorias?$ views/lista/lista_categorias.php [L,QSA]
	RewriteRule ^cad_categorias?$ views/cadastros/cad_categorias.php [L,QSA]

	RewriteRule ^servicos?$ views/lista/lista_servicos.php [L,QSA]
	RewriteRule ^cad_servicos?$ views/cadastros/cad_servicos.php [L,QSA]
	
	RewriteRule ^exemplo/(.*)?$ views/pasta_exemplo/arquivo_exemplo.php?id=$1 [L,QSA]	
	RewriteRule ^exemplo/pasta_exemplo/(.*)/(.*)?$ pasta_exemplo/pasta_exemplo/arquivo_exemplo.php?id=$1&id2=$2 [L,QSA]	
	

	#CONTROLERS**************************************************************




</IfModule>